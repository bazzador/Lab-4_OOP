<Window x:Class="UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Closing="Window_Closing">
    <Grid>
        <ListBox x:Name="OrderListBox" d:ItemsSource="{d:SampleData ItemCount=5}" RenderTransformOrigin="0.737,0.523" Margin="10,10,40,100"/>
        <Button x:Name="AddOrderButton" Content="Додати&#xD;&#xA;" HorizontalAlignment="Left" Margin="14,352,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.674,-1.615" Height="29" Width="59" Click="AddOrderButton_Click"/>
        <Button x:Name="EditOrderButton" Content="Змінити&#xA;" HorizontalAlignment="Left" Margin="89,352,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.674,-1.615" Height="29" Width="59" Click="EditOrderButton_Click"/>
        <Button x:Name="DeleteOrderButton" Content="Видалити&#xA;" HorizontalAlignment="Left" Margin="164,352,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.674,-1.615" Height="29" Width="59" Click="DeleteOrderButton_Click"/>

    </Grid>
</Window>
